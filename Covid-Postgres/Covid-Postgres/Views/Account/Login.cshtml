@model LoginVm
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .main {
            display: flex;
            justify-content: center;
        }

            .main > div {
                border: 1px solid none;
                border-radius: 10px;
                padding: 20px;
                width: 600px;
                height: 325px;
                background-color: antiquewhite
            }

        h3 {
            margin-left: 255px;
        }
        body {
            background-image: url('../../Images/istockphoto-1222227406-1024x1024.jpg');
        }
    </style>
</head>

<body>
    <div class="body2">
        <h3>
            Welcome . Let's Login!
        </h3>
        <div class="main">
            <div style="display:flex;justify-content:center" >
                <div  style="text-align:center">
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="form-group" >
                            <label asp-for="Username" style="text-align: right; clear: both; float: left; margin-right: 15px;" ></label>
                            <input asp-for="Username" class="form-control col-12" placeholder="Please fill your PhoneNumber" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" style="text-align: right; clear: both; float: left; margin-right: 15px;"></label>
                            <input asp-for="Password" type="password" class="form-control col-12" placeholder="Please fill your Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input style="text-align: right; clear: both; float: left; margin-right: 15px;display:inline"  type="checkbox" />
                            <label style="text-align: right; clear: both; float: left; margin-right: 15px;display:inline">Lưu tài khoản</label>
                            <br>
                        </div>
                        @if (ViewBag.Login != null)
                        {
                        <div class="alert-danger" style="float:left;clear:both">@ViewBag.Login</div>
                        }
                        <input type="submit" style="background-color:#c82333" class="btn btn-primary col-12" value="Login" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


