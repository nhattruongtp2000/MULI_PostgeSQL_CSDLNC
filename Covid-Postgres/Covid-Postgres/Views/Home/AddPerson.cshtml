@model Covid_Postgres.Models.Person

@{
    ViewData["Title"] = "AddPerson";
}

<h1>Thêm bệnh nhân mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonFullName" class="control-label"></label>
                <input asp-for="PersonFullName" class="form-control" />
                <span asp-validation-for="PersonFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirh" class="control-label"></label>
                <input asp-for="DateOfBirh" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonAddress" class="control-label"></label>
                <input asp-for="PersonAddress" class="form-control" />
                <span asp-validation-for="PersonAddress" class="text-danger"></span>
            </div>
            <label asp-for="PersonStatus" class="control-label"></label>
            <div style="display:inline-flex">
                <a onclick="Relate()" style="background-color: rgba(255, 57, 43, 0.1)" href="#" class="btn">Liên quan</a>
                <a onclick="NoRelate()" id="click2" style="margin-left: 30px; background-color: rgba(0, 148, 94, 0.2)" href="#" class="btn ">Không liên quan</a>
            </div>
            <div id="form1" class="form-group">              
                <select asp-for="RelatedPersonId" asp-items="@ViewBag.Listid" class="form-control">
                    <option>Mã bệnh nhân liên quan</option>
                </select>
                <span asp-validation-for="RelatedPersonId" class="text-danger"></span>
            </div>

            <div id="form2" class="form-group">
                <select asp-for="PersonStatus" class="form-control">
                    <option>Tình trạng</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
                <span asp-validation-for="PersonStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaceOfTreatmentId" class="control-label"></label>
                <select asp-for="PlaceOfTreatmentId" asp-items="@ViewBag.ListPlace" class="form-control" >
                    <option></option>
                </select>
                <span asp-validation-for="PlaceOfTreatmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="@ViewBag.ListGender" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#form1").hide();
            $("#form2").hide();           
        });

        function Relate() {
            $("#form2").hide();
            $("#form1").show();
        }

        function NoRelate() {
            $("#form1").hide();
            $("#form2").show();
        }
    </script>
}
