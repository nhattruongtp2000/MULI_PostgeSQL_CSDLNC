@model Covid_Postgres.Models.PlaceOfTreatment

@{
    ViewData["Title"] = "AddPlace";
}


<h1>Thêm nới điều trị</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPlace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaceName" class="control-label"></label>
                <input asp-for="PlaceName" class="form-control" />
                <span asp-validation-for="PlaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" type="number" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrenQuantity" class="control-label"></label>
                <input asp-for="CurrenQuantity" type="number" class="form-control" />
                <span asp-validation-for="CurrenQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

